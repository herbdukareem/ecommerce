{
    "name": "ecommerce-platform",
    "description": "RESTful API for the e-commerce platform using Laravel 10",
    "type": "project",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.4",
        "laravel/tinker": "^2.8",
        "ramsey/uuid": "^4.7",
        "spatie/laravel-permission": "^6.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.20",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --provider=\"Laravel\\Sanctum\\SanctumServiceProvider\" --tag=\"config\" --force"
        ],
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}