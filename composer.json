{
    "name": "ashlabtech/ecommerce-platform",
    "description": "RESTful API for the e-commerce platform using Laravel 12",
    "type": "project",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "ramsey/uuid": "^4.7",
        "spatie/laravel-permission": "^6.9",
        "intervention/image": "^3.0",
        "predis/predis": "^2.2",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.29",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --provider=\"Laravel\\Sanctum\\SanctumServiceProvider\" --tag=\"config\" --force"
        ],
        "test": "phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
